<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    tools:context=".SewaActivity">

  <TextView
      android:id="@+id/input_text"
      android:layout_width="300dp"
      android:layout_height="42dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="50dp"
      android:layout_marginTop="35dp"
      android:layout_marginEnd="50dp"
      android:fontFamily="@font/combold"
      android:paddingLeft="50dp"
      android:text="Input Data Anda"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:textStyle="bold" />

  <EditText
      android:id="@+id/input_nama"
      android:layout_width="255dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/input_text"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="120dp"
      android:layout_marginLeft="160dp"
      android:layout_marginTop="33dp"
      android:layout_marginEnd="17dp"
      android:hint="Nama anda"
      android:inputType="textShortMessage"
      android:paddingRight="15dp"
      android:textSize="15sp" />

  <ImageView
      android:id="@+id/nama_icon"
      android:layout_width="53dp"
      android:layout_height="37dp"
      android:layout_below="@+id/input_text"
      android:layout_alignParentStart="true"
      android:layout_marginStart="20dp"
      android:layout_marginTop="28dp"
      android:src="@drawable/name" />

  <EditText
      android:id="@+id/input_telphone"
      android:layout_width="255dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/input_nama"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="120dp"
      android:layout_marginLeft="160dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="17dp"
      android:hint="No Handphone"
      android:inputType="textShortMessage"
      android:paddingRight="15dp"
      android:textSize="15sp" />

  <ImageView
      android:id="@+id/telfon_icon"
      android:layout_width="42dp"
      android:layout_height="36dp"
      android:layout_below="@+id/nama_icon"
      android:layout_alignParentStart="true"
      android:layout_marginStart="25dp"
      android:layout_marginTop="18dp"
      android:src="@drawable/phone_icon" />


  <EditText
      android:id="@+id/input_pengantaran"
      android:layout_width="255dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/input_telphone"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="120dp"
      android:layout_marginLeft="160dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="17dp"
      android:hint="Pengantaran"
      android:inputType="textShortMessage"
      android:paddingRight="15dp"
      android:textSize="15sp" />

  <ImageView
      android:id="@+id/pengantaran_icon"
      android:layout_width="48dp"
      android:layout_height="45dp"
      android:layout_below="@+id/telfon_icon"
      android:layout_alignParentStart="true"
      android:layout_marginStart="25dp"
      android:layout_marginTop="18dp"
      android:src="@drawable/locati" />


  <EditText
      android:id="@+id/input_pengembalian"
      android:layout_width="255dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/input_pengantaran"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="120dp"
      android:layout_marginLeft="160dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="17dp"
      android:hint="Pengembalian"
      android:inputType="textShortMessage"
      android:paddingRight="15dp"
      android:textSize="15sp" />

  <ImageView
      android:id="@+id/pengembalian_icon"
      android:layout_width="47dp"
      android:layout_height="42dp"
      android:layout_below="@+id/pengantaran_icon"
      android:layout_alignParentStart="true"
      android:layout_marginStart="25dp"
      android:layout_marginTop="18dp"
      android:src="@drawable/pengantaran2" />

  <EditText
      android:id="@+id/tanggal_pinjam"
      android:layout_width="255dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/input_pengembalian"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="120dp"
      android:layout_marginLeft="160dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="17dp"
      android:hint="Tanggal pinjam"
      android:inputType="date"
      android:paddingRight="15dp"
      android:textSize="15sp" />

  <ImageView
      android:id="@+id/tglpinjam_icon"
      android:layout_width="45dp"
      android:layout_height="41dp"
      android:layout_below="@+id/pengembalian_icon"
      android:layout_alignParentStart="true"
      android:layout_marginStart="25dp"
      android:layout_marginTop="18dp"
      android:src="@drawable/date1_icon" />

  <EditText
      android:id="@+id/tanggal_pengembalian"
      android:layout_width="255dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tanggal_pinjam"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="120dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="17dp"
      android:hint="Tanggal pengembalian"
      android:inputType="date"
      android:paddingRight="15dp"
      android:textSize="15sp" />

  <ImageView
      android:id="@+id/tglkembali_icon"
      android:layout_width="45dp"
      android:layout_height="38dp"
      android:layout_below="@+id/tglpinjam_icon"
      android:layout_alignParentStart="true"
      android:layout_marginStart="25dp"
      android:layout_marginTop="18dp"
      android:src="@drawable/date2_icon" />

  <TextView
      android:id="@+id/nama_motor"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tanggal_pengembalian"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="120dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="17dp"
      android:fontFamily="@font/combold"
      android:paddingLeft="50dp"
      android:text="Type motor"
      android:textColor="@color/black"
      android:textSize="16dp"
      android:textStyle="bold" />

  <ImageView
      android:id="@+id/motor_icon"
      android:layout_width="43dp"
      android:layout_height="39dp"
      android:layout_below="@+id/tglkembali_icon"
      android:layout_alignParentStart="true"
      android:layout_marginStart="25dp"
      android:layout_marginTop="18dp"
      android:src="@drawable/motor_icon" />

  <ImageView
      android:id="@+id/pembayaran_icon"
      android:layout_width="49dp"
      android:layout_height="41dp"
      android:layout_below="@+id/motor_icon"
      android:layout_alignParentStart="true"
      android:layout_marginStart="21dp"
      android:layout_marginTop="14dp"
      android:src="@drawable/transaksi_icon" />

  <Spinner
      android:id="@+id/spinner"
      android:layout_width="255dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/nama_motor"
      android:layout_marginStart="42dp"
      android:layout_marginTop="20dp"
      android:layout_toEndOf="@+id/pembayaran_icon"
      android:entries="@array/metode_bayar"/>

  <Button
      android:id="@+id/btn_sewa"
      android:layout_width="229dp"
      android:layout_height="48dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="55dp"
      android:layout_marginTop="58dp"
      android:layout_marginEnd="55dp"
      android:layout_marginBottom="50dp"
      android:background="@drawable/pesan_bg"
      android:text="Pesan"
      android:textColor="@color/white"
      android:textSize="16sp"
      android:textStyle="bold" />
</RelativeLayout>